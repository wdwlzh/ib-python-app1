{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug: Web Server (Flask App)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "PORT": "8001"
            },
            "justMyCode": false,
            "args": [],
            "stopOnEntry": false
        },
        {
            "name": "Debug: Data Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/data_server.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Debug: Complete App (Start Script)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/start.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Debug: Development Mode (Real-time Logs)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/start_dev.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Debug: Database Operations",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/database.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Debug: Test Watchlist",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test_watchlist.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Debug: Portfolio (Legacy)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/ib_positions.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Attach: To Running Process",
            "type": "debugpy",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "justMyCode": false
        }
    ],
    "compounds": [
        {
            "name": "Debug: Full Application",
            "configurations": [
                "Debug: Data Server",
                "Debug: Web Server (Flask App)"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "Trading App",
                "order": 1
            }
        }
    ]
}