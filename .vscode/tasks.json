{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Complete App",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "start.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Start App (Development Mode)",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "start_dev.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Web Server Only",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "app.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PORT": "8001",
                    "FLASK_ENV": "development"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Start Data Server Only",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "data_server.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Initialize Database",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "database.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Test Watchlist Functionality",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "test_watchlist.py"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Kill All Python Processes",
            "type": "shell",
            "command": "pkill",
            "args": [
                "-f",
                "python.*app.py|python.*data_server.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}
